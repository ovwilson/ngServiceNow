{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "*": [
                "*"
            ]
        }
    },
    "exclude": [
        "dist"
    ],
    "include": [
        "./src/**/*",
        "./tests/*.json"
    ]
}